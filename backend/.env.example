# Application
APP_ENV=development
APP_NAME=webpv-backend
APP_VERSION=0.1.0
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/webpv

# Redis
REDIS_URL=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Frontend (para servir static files en producci√≥n)
FRONTEND_BUILD_PATH=../frontend/dist
